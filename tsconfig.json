{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2015",
    "baseUrl": "./",
    "paths": {
      "aca-dev-tools": [
        "dist/aca-dev-tools"
      ],
      "aca-dev-tools/*": [
        "dist/aca-dev-tools/*"
      ],
      "@alfresco/adf-extensions": [
        "dist/@alfresco/adf-extensions"
      ],
      "@alfresco/adf-extensions/*": [
        "dist/@alfresco/adf-extensions/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  }
}
