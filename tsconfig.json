{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "module": "es2015",
    "baseUrl": "./",
    "paths": {},
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  }
}
